# Deployment Configuration
# Copy this file to .env and fill in your values

# Private Keys (DO NOT COMMIT TO GIT)
PRIVATE_KEY=your_private_key_here
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# RPC URLs
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_MAINNET_RPC_URL=https://arb1.arbitrum.io/rpc

# API Keys
ARBISCAN_API_KEY=your_arbiscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Contract Addresses (will be populated after deployment)
BASE_ASSET_ADDRESS=
USDC_ADDRESS_ARBITRUM_SEPOLIA=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d

# Deployment Settings
INITIAL_FUNDING_AMOUNT=1000000000000 # 1M USDC (6 decimals)
MIN_DEPOSIT_AMOUNT=100000000 # 100 USDC (6 decimals)
MIN_WITHDRAW_AMOUNT=10000000 # 10 USDC (6 decimals)

# Multi-sig and Admin Addresses
ADMIN_ADDRESS=your_admin_address_here
MULTISIG_ADDRESS=your_multisig_address_here
TREASURY_ADDRESS=your_treasury_address_here

# Oracle Settings
CHAINLINK_PRICE_FEED_ADDRESS=
PYTH_PRICE_FEED_ADDRESS=

# Gas Settings
GAS_LIMIT=10000000
GAS_PRICE=100000000 # 0.1 gwei

# Verification Settings
VERIFY_CONTRACTS=true
ETHERSCAN_VERIFY_DELAY=30000 # 30 seconds

# Deployment Phases
DEPLOY_PHASE_1=true # Infrastructure (Registry, Access Control)
DEPLOY_PHASE_2=true # Core Trading (Margin, Order, Perpetual)
DEPLOY_PHASE_3=true # Settlement (Batch Settlement, Liquidation)
DEPLOY_PHASE_4=true # Liquidity Pool (RiverPool, LP Bucket Manager)

# Safety Settings
ENABLE_EMERGENCY_PAUSE=true
EMERGENCY_PAUSE_ADMIN=your_emergency_admin_address_here