{
  "name": "riverbit-contracts",
  "version": "2.0.0",
  "description": "RiverBit perpetual trading and RiverPool LP system smart contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "size": "hardhat compile && npx hardhat size-contracts",
    
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:arbitrum-sepolia": "hardhat run scripts/deploy-arbitrum.js --network arbitrumSepolia",
    "deploy:arbitrum-mainnet": "hardhat run scripts/deploy-arbitrum.js --network arbitrumOne",
    
    "deploy:prd2": "hardhat run scripts/deploy-prd2.js --network arbitrumSepolia",
    "deploy:prd2:mainnet": "hardhat run scripts/deploy-prd2.js --network arbitrumOne",
    "deploy:phase1": "hardhat run scripts/deploy-phase1.js --network arbitrumSepolia",
    "deploy:phase2": "hardhat run scripts/deploy-phase2.js --network arbitrumSepolia", 
    "deploy:phase3": "hardhat run scripts/deploy-phase3.js --network arbitrumSepolia",
    "deploy:phase4": "hardhat run scripts/deploy-phase4.js --network arbitrumSepolia",
    
    "verify": "hardhat verify",
    "verify:all": "node scripts/verify-all.js",
    "post-deploy": "node scripts/post-deploy.js",
    "setup": "node scripts/setup-contracts.js",
    
    "node": "hardhat node",
    "console": "hardhat console"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.5.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "hardhat": "^2.22.0",
    "dotenv": "^16.4.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.0"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "defi",
    "perpetual-trading",
    "liquidity-pool",
    "riverbit",
    "riverpool",
    "ethereum"
  ],
  "author": "RiverBit Team",
  "license": "MIT"
}